<?xml version='1.0'?>

<robot name="drive_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find drive_bot)/urdf/drive_bot.gazebo" />
  
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".6 .3 .03"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".6 .3 .03"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
      <origin xyz="0.2 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0499"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.2 0 -0.05" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>

    <collision name='front_left_post_collision'>
      <origin xyz="0.29 0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </collision>

    <visual name='front_left_post_visual'>
      <origin xyz="0.29 0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </visual>

    <collision name='front_right_post_collision'>
      <origin xyz="0.29 -0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </collision>

    <visual name='front_right_post_visual'>
      <origin xyz="0.29 -0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </visual>

    <collision name='rear_left_post_collision'>
      <origin xyz="-0.29 0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </collision>

    <visual name='rear_left_post_visual'>
      <origin xyz="-0.29 0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </visual>

    <collision name='rear_right_post_collision'>
      <origin xyz="-0.29 -0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </collision>

    <visual name='rear_right_post_visual'>
      <origin xyz="-0.29 -0.14 0.09" rpy=" 0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.15"/>
      </geometry>
    </visual>

  </link>

  <gazebo reference="chassis">
    <material>Gazebo/Blue</material>
  </gazebo>

  <link name="top_plate">
    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".6 .3 .03"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".6 .3 .03"/>
      </geometry>
    </visual>

  </link>

  <joint type="fixed" name="top_plate_fixed">
    <origin xyz="0 0 0.18" rpy="0 0 0"/>
    <child link="top_plate"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>



  <link name='left_wheel'>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius="0.2" length="0.05"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.2" length="0.05"/>
      </geometry>
    </visual>
  </link>

  <link name='right_wheel'>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius="0.2" length="0.05"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.2" length="0.05"/>
      </geometry>
    </visual>
  </link>

  <link name='camera'>
    <inertial>
      <mass value="2"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

  <link name='hokuyo'>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename = "package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="-0.15 0.2 0.1" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="-0.15 -0.2 0.1" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.275 0 0.04" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0.15 0 0.22" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

</robot>